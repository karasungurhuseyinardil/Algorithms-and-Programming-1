/* Example 15: Write the program that tells you whether a number entered on the keyboard is odd or even.

*/
#include<iostream>
using namespace std;

int decision(int x)
{
	if ((x % 2) == 0)
		return 1;
	else
		return 0;

}

int main()
{
	int b;
	cout << " Enter a number  ";
	cin >> b;

	if (decision(b) == 0)
		cout << "Odd number\n";
	else
		cout << " Even number \n "; 

	
	system("pause");

	return 0;

}

