/*Example3-v2
Write a C++ program that calculates and displays the average of even numbers between 
two integer numbers entered by user.
NOTE1: After taking the integer numbers from user you should specify the minimum and 
maximum numbers. Then, you need to count and find summation result of even numbers 
between two integer numbers entered by user.
NOTE2: Use for repetition control structure
*/

#include<iostream>
using namespace std;

int main()
{
     int number1, number2, min, max, sum, count;
     double average;

     cout << "Example3-v2"<<endl;
     cout << "Enter two integer numbers:";
     cin >> number1 >> number2;
    
    
     if (number1 > number2)
     {
           max = number1;
           min = number2;
     }
     else
     {
           max = number2;
           min = number1;
     }

     sum = 0;
     count = 0;
	 for (int i = min; i <= max; i++)
     {
           if (i % 2 == 0)
           {           
                  sum = sum + i;
                  count++;
                  cout << count<<". even number:"<<i << endl;
           }
          
     }
    
     average = static_cast<double>(sum) / count;
     cout << "Average result: " << average << endl;

     system("pause");
     return 0;
}

