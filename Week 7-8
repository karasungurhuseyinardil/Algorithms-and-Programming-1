/*Example11:
Write a C++ program that calculates and display following equation result. 
x value will be entered by user.

y = ((x ^ 5 + 2)) ^(1.0/2) / ((3x ^ 2 + 1))



*/

#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	double x, result;

	cout << "Example7" << endl;
	cout << "Enter a number:";
	cin >> x;

	result = sqrt(pow(x, 5) + 2) / (3 * pow(x, 2) + 1);
	cout << "Result= " << result << endl;

	system("pause");
	return 0;
}





/*Example12
Write a C++ program that calculates and display following equation result.
x value will be entered by user.

y=((x^4+3) )/((5x^2+1))^(1.0/3)

OR

y=âˆ›((x^4+3) )/((5x^2+1))

*/

#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	double x, result;

	cout << "Example8" << endl;
	cout << "Enter a number:";
	cin >> x;
	

	result = pow( static_cast<double>((pow(x, 4) + 3) / (5 * pow(x, 2) + 1)),(1.0/3));

	

	cout << "Result= " << result << endl;

	system("pause");
	return 0;
}

/* Example 13: Write the program that converts the Fahrenheit temperature entered in the main program to degrees with the function called convert and displays the converted result in the main program. To convert: Use the formula C = (F-32) /1.8.  */


#include<iostream>
using namespace std;



double convert(double n)
{
	return ((n - 32) / 1.8);


}
	int main()
	{

		int F;
		double C;

	cout << "Enter Fahrenheit degree" << endl;

	cin >> F;
	
	C = convert(F);


	

	cout << C << " degree "  << endl;

	system("pause");
	return 0;
}


