      }









//Example 3
//Write a C++ program that takes two numbers from user and //display the division (result) on the screen.


   #include<iostream>
   using namespace std;
  
   int main()
    {
     int number1, number2, result;
 
      cout << "Enter first number :"<<endl;
      cin >> number1;
 
      cout << "Enter second number :"<<endl;
      cin >> number2;
 
      result = number1 / number2;
 
      cout << "\n  The division result : " << result << endl;
 
      system("pause");
      return 0;
     }

//Example 3 with double variables
//Write a C++ program that takes two numbers from user and //display the division (result) on the screen.

 
   #include<iostream>
   using namespace std;
  
   int main()
    {
      double number1, number2, result;
 
      cout << "Enter first number :"<<endl;
      cin >> number1;
 
      cout << "Enter second number :"<<endl;
      cin >> number2;
 
      result = number1 / number2;
 
      cout << "\n  The division result : " << result << endl;
 
      system("pause");
      return 0;
     }

//Example 4
//Write a C++ program that takes three numbers from user //and display the following equation result on the screen.
// Result = (x + y) % (z - 3)


   #include<iostream>
   using namespace std;
  
   int main()
    {
       int x, y, z, result;
  
 	cout << "Enter first number : "<<endl;
 	cin >> x;
 
 	cout << "Enter second number : "<<endl;
 	cin >> y;
 
 	cout << "Enter third number: " <<endl;
 	cin >> z;
 
 	result = (x + y) % (z - 3);
 
 	cout << "\n The result : " << result << endl;
 
 	system("pause");
 	return 0;
     }
 
//Example 5
//Write a C++ program that takes two numbers from user and //displays the following equation result on the screen.
// Result = x*x+y*3

   #include<iostream>
   using namespace std;
 
   int main()
   {
	double x;
	double y;
	double result;

	cout << "Enter first number : "<<endl;
	cin >> x;

	cout << "Enter second number : " <<endl;
	cin >> y;

	result = x*x + y * 3;
	
	cout << "Result is " << result << endl;

	system("pause");
	return 0;
    }


