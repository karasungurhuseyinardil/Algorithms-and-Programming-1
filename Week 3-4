//Example 1-v1
//Write a C++ program that takes length and width of //rectangle and display the area (result) on the screen.



  #include<iostream>
  using namespace std;
 
   int main()
    {
      int width;
      int length;
      int area;
 
      cout << "Enter length value of rectangle : "<<endl;
      cin >> length;
      
      cout << "Enter width value of rectangle : "<<endl;
      cin >> width;
 
      area = length*width;
 
      cout << "The area result :" << area << endl << "\n";
 
      system("pause");
      return 0;
 }



//Example 1-v2
//Write a C++ program that takes length and width of //rectangle and display the area(result) on the screen.

  #include<iostream>
  using namespace std;
 
  int main()
   {
      double width, length;
 
      cout << "Enter length value of rectangle:";
      cin >> length;
      
      cout << "Enter width value of rectangle:";
      cin >> width;
 
      cout << "The area result : " << length * width<< endl << "\n";
 
      system("pause");
      return 0;
     
//Example 2-v1
//Write a C++ program that takes length, width and height //of rectangular prism and display the volume on the screen.


   #include<iostream>
   using namespace std;
  
   int main()
    {
      double length;
      double width;
      double height;
      double volume;
 
      cout << "Enter length value of rectangular prism: ";
      cin >> length;
 
      cout << "Enter width value of rectangular prism: ";
      cin >> width;
 
      cout << "Enter height value of rectangular prism: ";
      cin >> height;
 
      volume = length*width*height;
 
      cout << "The volume result  : " <<  volume<< endl << "\n";
 
      system("pause");
      return 0;
     } 







//Example 2-v2
